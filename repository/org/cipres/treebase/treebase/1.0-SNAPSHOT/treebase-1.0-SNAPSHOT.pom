  <organization>
    <name>Naturalis Biodiversity Center</name>
    <url>http://www.naturalis.nl</url>
  </organization>
  
  <!-- order of repositories used to compile the project -->
  <repositories>

    <!-- TreeBASE gh-pages repository - checked FIRST for internal artifacts -->
    <repository>
      <id>treebase-github</id>
      <name>TreeBASE GitHub Pages Maven Repository</name>
      <url>https://treebase.github.io/treebase/repository</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>

    <repository>
      <id>maven2</id>
      <name>Default Maven2 Repository</name>
      <url>https://repo1.maven.org/maven2</url>
    </repository>

    <repository>
      <id>repository.jboss.org</id>
      <name>JBoss Maven Repository</name>
      <url>https://repository.jboss.org/nexus/content/groups/public/maven2</url>
      <layout>default</layout>
    </repository>

    <!-- GBIF host NexML, Mesquite and CQL-Java in order for this to build -->
    <repository>
      <id>gbif-third-party</id>
      <name>GBIF hosted third party jars</name>
      <url>https://repository.gbif.org/repository/thirdparty/</url>
    </repository>

  </repositories>
  
  <!-- Java 17 LTS configuration -->
  <build>
    <plugins>
    
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <source>17</source>
          <target>17</target>
          <release>17</release>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.0.0-M5</version>
        <configuration>
          <includes>
            <include>**/*Test.java</include>
          </includes>
          <!-- Use stateless test set runner for better JUnit 4 support -->
          <useSystemClassLoader>true</useSystemClassLoader>
          <useManifestOnlyJar>false</useManifestOnlyJar>
          <testFailureIgnore>false</testFailureIgnore>
          <!-- JVM arguments for Java 17 compatibility with older libraries -->
          <argLine>--add-opens java.base/java.lang=ALL-UNNAMED --add-opens java.base/java.util=ALL-UNNAMED --add-opens java.base/java.lang.reflect=ALL-UNNAMED --add-opens java.base/java.text=ALL-UNNAMED --add-opens java.desktop/java.awt.font=ALL-UNNAMED</argLine>
        </configuration>
      </plugin>

        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-war-plugin</artifactId>
            <version>3.3.1</version>
        </plugin>

    </plugins>
  </build>
  <distributionManagement>
    <site>
      <id>website</id>
      <url>file:///var/www/html/sites/treebase</url>
    </site>
  </distributionManagement>
  <profiles>
    <profile>
      <id>ciProfile</id>
      <activation>
        <property>
          <name>enableCiProfile</name>
          <value>true</value>
        </property>
      </activation>
      <build>
        <plugins>
        
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-pmd-plugin</artifactId>
            <executions>
              <execution>
                <goals>
                  <goal>check</goal>
                </goals>
              </execution>
            </executions> 
          </plugin>
          
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>cobertura-maven-plugin</artifactId>
            <configuration>
              <check>
                <totalLineRate>80</totalLineRate>
                <totalBranchRate>100</totalBranchRate>
              </check>
            </configuration>
            <executions>
            
              <execution>
                <id>clean</id>
                <goals>
                  <goal>clean</goal>
                </goals>
              </execution>
              
              <execution>
                <id>check</id>
                <goals>
                  <goal>check</goal>
                </goals>
              </execution>
              
            </executions>
          </plugin>
          
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
